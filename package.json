{
  "name": "7-3",
  "version": "1.0.0",
  "description": "https://krystianskoczen.github.io/git-7-3/",
  "main": "index.js",
  "dependencies": {
    "browsersync": "0.0.1-security"
  },
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.24.5",
    "globstar": "^1.0.0",
    "html-validator-cli": "^4.0.4",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "nu-html-checker": "^0.1.0",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "test": "npm-run-all test:*",
    "test:html": "globstar nu-html-checker *.html",
    "init-project": "npm install && mkdir-p sass css vendor images js && touch README.md index.html sass/style.scss js/script.js && curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "init:dirs": "mkdirp sass css vendor images js",
    "init:files": "touch README.md index.html sass/style.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "build:clean": "npm run build:rimraf",
    "build:sass": "node-sass --output-style compact -o css sass",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",
    "build:rimraf": "rimraf -r css",
    "watch": "npm-run-all watch:*",
    "watch:sassprefixer": "node-sass --output-style expanded --source-map true -o css sass --watch && onchange -d 100 css/style.css --autoprefixer-cli -o css/style.css",
    "watch:browsersync": "node_modules/.bin/browser-sync start --server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KrystianSkoczen/git-7-3.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KrystianSkoczen/git-7-3/issues"
  },
  "homepage": "https://github.com/KrystianSkoczen/git-7-3#readme"
}
